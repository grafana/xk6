# File generated by cdo from docs/CONTRIBUTING.md; DO NOT EDIT.

SHELL=bash
.SHELLFLAGS=-e -o pipefail -c

.PHONY: __help__
__help__:
	@echo 'Usage: make [target]'
	@echo ''
	@echo 'Targets:'
	@echo '  all      Run all tasks'
	@echo '  doc      Update documentation'
	@echo '  it       Run the integration tests'
	@echo '  lint     Run the linter'
	@echo '  makefile Generate the Makefile'
	@echo '  security Run security and vulnerability checks'
	@echo '  test     Run the tests'

# Run all tasks
.PHONY: all
all: security lint test it doc makefile

# Update documentation
.PHONY: doc
doc: 
	@(\
		mdcode update;\
		go run ./tools/docsme -r cli -o README.md;\
	)

# Run the integration tests
.PHONY: it
it: 
	@(\
		bats .github/validate.bats;\
	)

# Run the linter
.PHONY: lint
lint: 
	@(\
		golangci-lint run;\
	)

# Generate the Makefile
.PHONY: makefile
makefile: 
	@(\
		cdo --makefile Makefile;\
	)

# Run security and vulnerability checks
.PHONY: security
security: 
	@(\
		gosec ./...;\
		govulncheck ./...;\
	)

# Run the tests
.PHONY: test
test: 
	@(\
		go test -count 1 -race -coverprofile=coverage.txt -timeout 2m ./...;\
	)

